{
  "name": "Notification",
  "type": "object",
  "properties": {
    "user_id": {
      "type": "string",
      "description": "User to notify"
    },
    "type": {
      "type": "string",
      "enum": [
        "session_request",
        "request_accepted",
        "request_declined",
        "session_reminder",
        "session_completed",
        "new_review",
        "credits_received",
        "message",
        "system"
      ],
      "description": "Notification type"
    },
    "title": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "link": {
      "type": "string",
      "description": "Link to relevant page"
    },
    "is_read": {
      "type": "boolean",
      "default": false
    },
    "related_user_id": {
      "type": "string"
    },
    "related_session_id": {
      "type": "string"
    }
  },
  "required": [
    "user_id",
    "type",
    "title",
    "message"
  ]
}